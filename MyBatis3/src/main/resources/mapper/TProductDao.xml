<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.marion.mybatis3.dao.TProductDao">

    <resultMap type="com.marion.mybatis3.entity.TProduct" id="TProductMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="inventory" column="inventory" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TProductMap">
        select
          id, title, inventory
        from t_product
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TProductMap">
        select
          id, title, inventory
        from t_product
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="title != null and title != ''">
                and title = #{title}
            </if>
            <if test="inventory != null">
                and inventory = #{inventory}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from t_product
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="title != null and title != ''">
                and title = #{title}
            </if>
            <if test="inventory != null">
                and inventory = #{inventory}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into t_product(title, inventory)
        values (#{title}, #{inventory})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into t_product(title, inventory)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.title}, #{entity.inventory})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into t_product(title, inventory)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.title}, #{entity.inventory})
        </foreach>
        on duplicate key update
        title = values(title),
        inventory = values(inventory)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update t_product
        <set>
            <if test="title != null and title != ''">
                title = #{title},
            </if>
            <if test="inventory != null">
                inventory = #{inventory},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from t_product where id = #{id}
    </delete>

</mapper>

